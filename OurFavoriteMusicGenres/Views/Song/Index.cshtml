@model SongViewModel

<div class="row">
    <div class="col-sm-10">
        <h1> Our Favorite Songs </h1>
    </div>
    <div class="col-sm-2">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Add", "Song")'"> Add New Song </button>
    </div>
</div>

<br />
<div class="container">

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Artist</th>
                <th scope="col">Genre</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Song song in Model.Songs )
            {
                <tr someData="@song.SongId">
                    <td>@song.Title</td>
                    <td>@song.Artist</td>
                    <td>@song.Genre.Name</td>
                    <td>
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("UpdateSong", "Song", new {id = song.SongId})'">Update</button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("DeleteSong", "Song", new {id = song.SongId})'">Delete</button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>