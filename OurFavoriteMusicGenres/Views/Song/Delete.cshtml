@model SongViewModel

<h2>Confirm Deletion</h2>
<h4>@Model.selectedSong.Title (@Model.selectedSong.Artist)</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="selectedSong.SongId" />

    <button type="submit" class="btn btn-primary" style="padding-right:20px">Delete</button>
    <a asp-controller="Song" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
